<div class="container" id="digital_collection-index">
  <h1>Digital Collections</h1>

  <table>
    <thead>
      <tr>
        <th>Alias</th>
        <th>Name</th>
        <th>Image url</th>
        <th>Thumbnail url</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @digital_collections.each do |digital_collection| %>
        <tr>
          <td id="collection-alias"><%= link_to digital_collection.collection_alias, path(digital_collection) %></td>
          <td id="collection-image"><%= image_tag digital_collection.image_url %> <br/> <span id="image-url"><%= digital_collection.image_url %></span></td>
          <td id="collection-thumbnail"><%= image_tag digital_collection.thumbnail_url %> <br/> <span id="thumbnail-url"><%= digital_collection.thumbnail_url %></span></td>
          <td id="collection-text">
            <h2 id="collection-name"><%= link_to digital_collection.name, path(digital_collection) %></h2>
            <p id="collection-description"><%= digital_collection.description %></p>
          </td>
          <td class="admin"><%= link_to 'Show', digital_collection %></td>
          <td class="admin"><%= link_to 'Edit', edit_digital_collection_path(digital_collection) %></td>
          <td class="admin"><%= link_to 'Destroy', digital_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <span class="admin">
    <%= link_to 'New Digital collection', new_digital_collection_path %>
  </span>
</div>
