<%= form_for(@digital_collection) do |f| %>
  <% if @digital_collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@digital_collection.errors.count, "error") %> prohibited this digital_collection from being saved:</h2>

      <ul>
      <% @digital_collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :collection_alias %><br>
    <%= f.text_field :collection_alias %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :thumbnail_url %><br>
    <%= f.text_field :thumbnail_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :priority%><br>
    <%= f.text_field :priority %>
  </div>
  <div class="field">
    <%= f.label :is_private %><br>
    <%= f.check_box :is_private %>
  </div>
  <div class="field">
    <%= f.label :allowed_ip_addresses %> (<%= t('tul_cdm.digital_collection.allowed_ip_helper_text') %>)<br>
    <%= f.text_field :allowed_ip_addresses %>
  </div>
  <div class="field">
    <%= f.label :featured%><br>
   <%= f.select :featured, [['No', 'No'], ['Yes', 'Yes']] %>
  </div>
  <div class="field">
    <%= f.label :custom_url%><br>
   <%= f.text_field :custom_url %>
  </div>
  <div class="field">
    <%= f.label :is_custom_landing_page %><br>
   <%= f.select :is_custom_landing_page, [['No', false], ['Yes', true]] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
